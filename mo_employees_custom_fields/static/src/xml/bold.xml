<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="BoldTextField.CharField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="formattedValue" style="font-weight: bold;" />
        </t>
        <t t-else="">
            <input
                class="o_input o_input_bold"
                t-att-class="{'o_field_translate': props.isTranslatable, 'o_input_bold': true}"
                t-att-id="props.id"
                t-att-type="props.type === 'email' ? 'email' : 'text'"
                t-att-pattern="props.type === 'email' ? '.+@.+\\..+' : undefined"
                t-att-title="props.type === 'email' ? 'Please enter a valid email address.' : undefined"
                t-att-autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                t-att-maxlength="props.maxLength > 0 and props.maxLength"
                t-att-placeholder="props.placeholder"
                t-ref="input"
            />
            <t t-if="props.isTranslatable">
                <TranslationButton
                    fieldName="props.name"
                    record="props.record"
                    updateField="props.update"
                />
            </t>
        </t>
    </t>

</templates>
